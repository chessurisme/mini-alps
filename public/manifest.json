{
	"name": "Mini ALPS: Your Personal Knowledge Vault",
	"short_name": "Mini ALPS",
	"id": "Mini ALPS",
	"lang": "en",
	"scope": "/",
	"dir": "ltr",
	"categories": ["productivity", "utilities"],
	"description": "Your personal knowledge vault, offline-first and ready for anything.",
	"start_url": "/",
	"display": "standalone",
	"background_color": "#F9F3EF",
	"theme_color": "#D45715",
	"orientation": "portrait",
	"icons": [
		{
			"src": "/android-chrome-192x192.png",
			"sizes": "192x192",
			"type": "image/png"
		},
		{
			"src": "/android-chrome-512x512.png",
			"sizes": "512x512",
			"type": "image/png"
		}
	],
	"apple": [
		{
			"src": "/apple-touch-icon.png",
			"sizes": "180x180",
			"type": "image/png"
		}
	],
	"share_target": {
		"action": "/share-target",
		"method": "POST",
		"enctype": "multipart/form-data",
		"params": {
		"title": "title",
		"text": "text",
		"url": "url",
			"files": [
				{
				"name": "files",
				"accept": ["image/*", "video/*", "audio/*", "application/pdf", "text/*"]
				}
			]
		}
	}
}
